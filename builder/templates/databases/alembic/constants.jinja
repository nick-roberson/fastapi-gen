import os

# Pull in environment vars for MYSQL or POSTGRES
DB_HOST = os.getenv("{{ db_config.host_env}}")
DB_PORT = os.getenv("{{ db_config.port_env}}")
DB_USER = os.getenv("{{ db_config.user_env}}")
DB_NAME = os.getenv("{{ db_config.db_env}}")
DB_PASSWORD = os.getenv("{{ db_config.password_env}}")

# Pull in environment var for DB_TYPE
DB_TYPE = os.getenv("{{ db_config.db_type_env}}")

def get_url() -> str:
    """Get the database URL from the environment variables"""
    # Get the database type
    if DB_TYPE is None:
        raise ValueError("DB_TYPE environment variable must be set")

    # Return the database URL based on the type
    if DB_TYPE == "postgres":
        return f"postgresql://{DB_USER}:{DB_PASSWORD}@{DB_HOST}:{DB_PORT}/{DB_NAME}"
    elif DB_TYPE == "mysql":
        return f"mysql+pymysql://{DB_USER}:{DB_PASSWORD}@{DB_HOST}:{DB_PORT}/{DB_NAME}"
    else:
        raise ValueError(
            f"Invalid database type {DB_TYPE} must be 'postgres' or 'mysql'"
        )

# Get the database URL
DB_URL = get_url()
